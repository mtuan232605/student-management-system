<div class="container-fluid" id="make-payment">
    <form class="form-fee-mgmt" action="" method="POST">
        {{#each errors}}
        <div class="alert alert-danger custom-alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top:0px;">
                <span aria-hidden="true" style="color:white;">&times;</span>
            </button>
            <div class="media">
                <i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true"></i>
                <div class="media-body ml-4 mt-1">
                    <strong>{{text}}.</strong>&nbsp;&nbsp;Change a few things up and try submitting again.
                </div>
            </div>
        </div>
        {{/each}}
        <div class="form-row">
            <div class="col-md-9">
                <h4>Fee Entry For Students</h4>
                <p style="line-height: 10px;">Fields marked with (<span style="color:red;"> * </span>) are mandatory.</p>
            </div>
            <div class="col-md-3">
                <h4>Receipt No:</h4>
                {{#if paymentId}}
                <p>{{paymentId}}</p>
                <input type="hidden" name="paymentId" value="{{paymentId}}">
                {{else}}
                <p>{{body.paymentId}}</p>
                <input type="hidden" name="paymentId" value="{{body.paymentId}}">
                {{/if}}
            </div>
        </div>

        <hr>
        <h3>Step 1</h3>
        <p>Student details</p>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="">Student ID ( <span>*</span> )</label>
                <input type="text" name="studentRoll" id="studentRoll" value="{{body.studentRoll}}" onchange="getStudentInfo(this.value);"
                    class="form-control" placeholder="Enter Student ID">
            </div>
            <div class="form-group col-md-3">
                <label for="">Name ( <span>*</span> )</label>
                <input type="text" name="studentName" id="studentName" value="{{body.studentName}}" class="form-control"
                    placeholder="Enter Student's Full Name">
            </div>

            <div class="form-group col-md-3">
                <label for="">Semester ( <span>*</span> )</label>
                <input type="text" name="studentSemester" id="studentSemester" value="{{body.studentSemester}}" class="form-control"
                    placeholder="Enter Semester Studying In">
            </div>

            <div class="form-group col-md-3">
                <label for="">Section ( <span>*</span> )</label>
                <input type="text" name="studentSection" id="studentSection" value="{{body.studentSection}}" class="form-control"
                    placeholder="Enter Student's Section">
            </div>
        </div>

        <hr>

        <h3>Step 2</h3>
        <p>Select course, class and section.</p>
        <div class="form row">
            <div class="form-group col-md-6">
                <label for="">Department ( <span>*</span> )</label>
                <input type="text" name="studentDept" id="studentDept" value="{{body.studentDept}}" class="form-control"
                    placeholder="Enter Department">
            </div>

            <div class="form-group col-md-6">
                <label for="">Course ( <span>*</span> )</label>
                <input type="text" name="studentCourse" id="studentCourse" value="{{body.studentCourse}}" class="form-control"
                    placeholder="Enter Course" oninput="getCourse(this.value);">
            </div>
        </div>

        <hr>

        <h3>Step 3</h3>
        <p>Enter amount and due date.</p>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="">Tuition Fee( <span>*</span> )</label>
                <input type="text" name="tuitionFee" id="tuitionFee" value="{{body.tuition}}" class="form-control" placeholder="Enter Tuition Fee" ></input>
            </div>
            <div class="form-group col-md-3">
                <label for="">Tuition Discount ( <span>*</span> )</label>
                <input type="text" name="tuitionDiscount" id="tuitionDiscount" value="{{body.tuitionDiscount}}" class="form-control" placeholder="Enter Tuition Discount" oninput="getTotalFee()">
                {{!-- <p class="text-muted mt-2">Enter 0 if no dues.</p> --}}
            </div>
            <div class="form-group col-md-3">
                <label for="">Date of payment</label>
                <input type="text" id="datepicker" name="dateOfPayment" value="{{body.dateOfPayment}}" class="form-control"
                    placeholder="Enter Date of payment">
            </div>
            <div class="form-group col-md-3">
                <label for="">Total Fee </label>
                <input type="text" name="totalFee" id="totalFee" value="{{body.totalFee}}" class="form-control" placeholder="Enter Total Fee">
            </div>
        </div>
        <script>
            function getTotalFee() {
                var tuitionFee = document.getElementById("tuitionFee").value*1;
                var tuitionDiscount = document.getElementById("tuitionDiscount").value*1;
                document.getElementById("totalFee").value = tuitionFee-((tuitionFee*tuitionDiscount)/100) ;
            }
        </script>

        <button type="submit" class="btn btn-default btn-lg btn-block">Submit Fee</button>
    </form>
</div>